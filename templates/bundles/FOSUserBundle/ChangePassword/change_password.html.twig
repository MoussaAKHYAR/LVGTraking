{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_widget(form) }}
<div>
    <input type="submit" value="{{ 'change_password.submit'|trans }}" />
</div>
{{ form_end(form) }}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>L V G - {% block title %}{% endblock %} </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="{{asset('assets/css/login.css')}}" />
</head>
<body>
<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Bienvenue</h3>
            <p>Les Vidanguers de Guinn√©e</p>
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Connexion</h3>
                    <div class="row register-form">
                        {% trans_default_domain 'FOSUserBundle' %}

                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <form action="{{ path("fos_user_change_password") }}" method="post" class="row">
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group">
                                    {{ form_label(form.plainPassword.first,'Mot de passe') }}
                                    {{ form_widget(form.plainPassword.first) }}
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group">
                                    {{ form_label(form.plainPassword.second,'Confirmer mot de passe') }}
                                    {{ form_widget(form.plainPassword.second) }}
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Mot de passe " autocomplete="current-password" />
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="checkbox" id="remember_me" name="_remember_me" checked />
                                    <label for="remember_me"> Se souvenir de moi</label>
                                    <a href="">mot de passe oublie ?</a>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Se connecter" />
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>

</body>
</html>