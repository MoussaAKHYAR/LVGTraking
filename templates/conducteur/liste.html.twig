{% extends 'base.html.twig' %}

{% block title %} liste Conducteur{% endblock %}

{% block content %}
    <div class="panel-header bg-primary-gradient">
            <div class="page-inner py-5">
                <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
                    <div>
                        <h2 class="text-white pb-2 fw-bold">Liste des Conducteurs</h2>
                    </div>
                </div>
            </div>
    </div>
    <div class="card">
        <div class="card-header">
            <div class="card-title">Liste des Conducteurs</div>
        </div>
			<div class="card-body">
									
                <table class="table table-head-bg-success">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Date de Naissance</th>
                            <th scope="col">Telephone</th>
                            <th scope="col">Adresse</th>
                            <th scope="col">Action</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for conducteur in conducteurs %}
                            <tr>
                                <td>{{conducteur.id}}</td>
                                <td>{{conducteur.nom}}</td>
                                <td>{{conducteur.prenom}}</td>
                                <td>{{conducteur.DateNaissance|date('d/m/y')}}</td>
                                <td>{{conducteur.tel}}</td>
                                <td>{{conducteur.adresse}}</td>
                                <td>
                                    <a href="{{ path('editConducteur', {id: conducteur.id}) }}" class="btn btn-dark">Editer</a>
                                </td>
                                <td>
                                    <a href="{{ path('deleteConducteur', {id: conducteur.id}) }}" class="btn btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
			</div>
		</div>
{% endblock %}

