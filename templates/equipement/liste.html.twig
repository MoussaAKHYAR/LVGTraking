{% extends 'base.html.twig' %}

{% block title %} liste Equipement{% endblock %}

{% block content %}
    <div class="panel-header bg-primary-gradient">
            <div class="page-inner py-5">
                <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
                    <div>
                        <h2 class="text-white pb-2 fw-bold">Liste des equipements</h2>
                    </div>
                </div>
            </div>
    </div>
    <div class="card">
        <div class="card-header">
            <div class="card-title">Liste des equipements</div>
        </div>
			<div class="card-body">
									
                <table class="table table-head-bg-success">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Numero de s√©rie</th>
                            <th scope="col">Date d'acquisition</th>
                            <th scope="col">Vehicule</th>
                            <th scope="col">Action</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for equipement in equipements %}
                            <tr>
                                <td>{{equipement.id}}</td>
                                <td>{{equipement.numeroSerie}}</td>
                                <td>{{equipement.dateDacquisition|date("d/m/Y")}}</td>
                                <td>{{equipement.vehicule.nom}}</td>
                                <td>
                                    <a href="{{ path('editEquipement', {id: equipement.id}) }}" class="btn btn-dark">Editer</a>
                                </td>
                                <td>
                                    <a href="{{ path('deleteEquipement', {id: equipement.id}) }}" class="btn btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
			</div>
		</div>
{% endblock %}

